{% extends 'base.html.twig' %}

{% block title %}Hello CompaniesController!{% endblock %}

{% block body %}
    <h1>Compagnies</h1>
    <table class="table">
        <thead>
            <th>#</th>
            <th>Nom</th>
            <th>Sigle</th>
            <th>Employ√©s</th>
            <th>Actions</th>
        </thead>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.nom }}</td>
                <td>{{ company.sigle }}</td>
                <td>{{ company.employes }}</td>
                <td>
                    <a href="{{path('show_company',{'id': company.id})}}" class="btn btn-primary">Voir</a>
                    <a href="{{path('modify_company',{'id': company.id})}}" class="btn btn-warning">Modifier</a>
                    <a href="{{path('delete_company',{'id': company.id})}}" class="btn btn-danger">Suppression</a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('add_company') }}" class="btn btn-primary mt-3">Ajouter une compagnie</a>


{% endblock %}
